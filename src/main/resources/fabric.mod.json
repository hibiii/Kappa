{
  "schemaVersion": 1,
  "id": "kappa",
  "version": "${version}",

  "name": "Kappa",
  "description": "This mod adds OptiFine capes (correctly), and is aimed for use in snapshots. It's also meant to be very light and to modify very little so it doesn't upset server moderators, or so it doesn't get broken very easily (which upsets me!).",
  "authors": [
    "Hibi"
  ],
  "contact": {
    "homepage": "https://hibiscus.pet/mods/kappa",
    "sources": "https://github.com/Hibiii/Kappa",
    "issues": "https://github.com/Hibiii/Kappa/issues"
  },

  "license": "Unlicense",
  "icon": "assets/kappa/icon.png",

  "environment": "client",
  "mixins": [
    "kappa.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "minecraft": ">=1.18-alpha.21.37.a",
    "java": ">=16"
  },
  "breaks": {
    "opticape": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.github_releases": "https://github.com/Hibiii/Kappa/releases/",
        "modmenu.discord": "https://discord.gg/Zef3c27dN2",
        "kappa.discord.hibi": "https://dsc.bio/hibi",
        "kappa.minecraft_cug": "https://account.mojang.com/terms#commercial"
      }
    }
  }
}
